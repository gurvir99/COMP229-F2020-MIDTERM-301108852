<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->


   <!--if the title is "Edit Book" the content displayed is for the book's Edit process-->
   <% if(title == "Edit Book") { %>

    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="NameTextField">Title</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Book Name" name="title" value="<%= book.Title %>" required>
              </div>

              <div class="form-group">
                 <label for="descriptionTextArea">Description</label>
                <textarea type="text" class="form-control" name="description" id="descriptionTextArea" placeholder="Enter description..."  required>
                 <%=book.Description%>
                </textarea>
              </div>
              <div class="form-group">
                <label for="PriceTextField">Price</label>
                <input type="text" class="form-control" id="PriceTextField"
                placeholder="Book Price" name="price" value="<%= book.Price %>"  required>
              </div>
              <div class="form-group">
                <label for="AuthorTextField">Author</label>
                <input type="text" class="form-control" id="AuthorTextField"
                placeholder="Book Author" name="author" value="<%= book.Author %>"  required>
              </div>
              <div class="form-group">
                <label for="GenreTextField">Genre</label>
                <input type="text" class="form-control" id="GenreTextField"
                placeholder="Book Genre" name="genre" value="<%= book.Genre %>"  required>
              </div>

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/books" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

  <% } %>

  <!--if the title is "Add a Book" the content displayed is for the book's Add process-->
  <% if(title == "Add a Book") { %>

   <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="NameTextField">Title</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Book Name" name="title"  required>
              </div>

              <div class="form-group">
                 <label for="descriptionTextArea">Description</label>
                <textarea type="text" class="form-control" name="description" id="descriptionTextArea" placeholder="Enter description..."  required>
                
                </textarea>
              </div>
              <div class="form-group">
                <label for="PriceTextField">Price</label>
                <input type="text" class="form-control" id="PriceTextField"
                placeholder="Book Price" name="price"  required>
              </div>
              <div class="form-group">
                <label for="AuthorTextField">Author</label>
                <input type="text" class="form-control" id="AuthorTextField"
                placeholder="Book Author" name="author"   required>
              </div>
              <div class="form-group">
                <label for="GenreTextField">Genre</label>
                <input type="text" class="form-control" id="GenreTextField"
